<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/pagetwo"
    tools:context=".MainActivity2">

    <!--This shows the date on the app on the
    Edit page similar to the Home page.-->
    <TextView
        android:id="@+id/date_text2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/digital_Clock"
        android:text="Date"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"

        />

    <!--This XML shows the Digital clock on the
    Edit page similar to the Home Page.-->
    <DigitalClock
        android:id="@+id/digital_Clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <!--This button lets the user go back to the Home Page-->
    <Button
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        android:textColor="@color/white" />

    <!--This button lets the user add an event-->
    <Button
        android:id="@+id/eventbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Event"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/event_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Event/Appointment"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="150dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00A6FF"
    />

    <EditText
        android:id="@+id/date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Date (Ex. 01/01/01)"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="200dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00A6FF"
    />

    <EditText
        android:id="@+id/time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Time (Ex. 5:30 AM/PM)"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="250dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00A6FF"
        />

</RelativeLayout>