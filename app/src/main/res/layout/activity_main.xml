<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pageone"
    tools:context=".MainActivity">

    <!--This shows the date on the app.-->
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Date"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/digital_Clock"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <!--This XML displays the Image view of the year.-->
    <ImageView
        android:id="@+id/year"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/year"
        />

    <!--This XML displays the Image view of every leap year.-->
    <ImageView
        android:id="@+id/leapyear"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/leapyear"
        />

    <!--This XML displays the Image view of the day marker
    which marks the day we're currently in.-->
    <ImageView
        android:id="@+id/daymarker"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/daymarker"
        />

    <!--
        <ImageView
            android:id="@+id/dayevent"
            android:layout_width="375dp"
            android:layout_height="375dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dayevent"
            /
       -->

    <!--This XML displays the Image view of Monday.-->
    <ImageView
        android:id="@+id/monday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/monday"
        />

    <!--This XML displays the Image view of Tuesday.-->
    <ImageView
        android:id="@+id/tuesday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tuesday"
        />

    <!--This XML displays the Image view of Wednesday.-->
    <ImageView
        android:id="@+id/wednesday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wednesday"
        />

    <!--This XML displays the Image view of Thursday.-->
    <ImageView
        android:id="@+id/thursday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/thursday"
        />

    <!--This XML displays the Image view of Friday.-->
    <ImageView
        android:id="@+id/friday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/friday"
        />

    <!--This XML displays the Image view of Saturday.-->
    <ImageView
        android:id="@+id/saturday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/saturday"
        />

    <!--This XML displays the Image view of Sunday.-->
    <ImageView
        android:id="@+id/sunday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sunday"
        />

    <!--This XML displays the Image view of DayNight-->
    <ImageView
        android:id="@+id/daynnight"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/daynnightclock"
        />

    <!--This XML shows the Digital clock on the Home Page.-->
    <DigitalClock
        android:id="@+id/digital_Clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <!--This button lets the user add an events or appointments.-->
    <Button
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/add"
        android:textColor="@color/white"
        />

    <!--This button lets user go to the pop up window for
    their events or appointments that takes place on Mondays.-->
    <Button
        android:id="@+id/mday"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="238dp"
        android:layout_marginTop="245dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00"
        />

    <!--This button lets user go to the pop up window for
    their events or appointments that takes place on Tuesdays.-->
    <Button
        android:id="@+id/tday"
        android:layout_width="25dp"
        android:layout_height="52dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="320dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00"
        />

    <!--This button lets user go to the pop up window for
    their events or appointments that takes place on Wednesdays.-->
