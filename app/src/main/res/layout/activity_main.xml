<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pageone"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android:textColor=&quot;@color/white&quot;" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Date"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/digital_Clock"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/year"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/year"
        />

    <ImageView
        android:id="@+id/leapyear"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/leapyear"
        />

    <!--
        <ImageView
            android:id="@+id/dayevent"
            android:layout_width="375dp"
            android:layout_height="375dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dayevent"
            /
       -->

    <ImageView
        android:id="@+id/daymarker"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:background="@drawable/daymarker" />

    <ImageView
        android:id="@+id/monday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/monday"
        />

    <ImageView
        android:id="@+id/tuesday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tuesday"
        />

    <ImageView
        android:id="@+id/wednesday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/wednesday"
        />

    <ImageView
        android:id="@+id/thursday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/thursday"
        />

    <ImageView
        android:id="@+id/friday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/friday"
        />

    <ImageView
        android:id="@+id/saturday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/saturday"
        />

    <ImageView
        android:id="@+id/sunday"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sunday"
        />

    <ImageView
        android:id="@+id/daynnight"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/daynnightclock"
        />

    <DigitalClock
        android:id="@+id/digital_Clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/add"
        android:textColor="#FFFFFF"
        />

    <Button
        android:id="@+id/mday"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="238dp"
        android:layout_marginTop="245dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00" />

    <Button
        android:id="@+id/tday"
        android:layout_width="25dp"
        android:layout_height="52dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="320dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00" />

    <Button
        android:id="@+id/wday"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="415dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00" />

    <Button
        android:id="@+id/thday"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="468dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00" />

    <Button
        android:id="@+id/fday"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="415dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00" />

    <Button
        android:id="@+id/stday"
        android:layout_width="25dp"
        android:layout_height="52dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="320dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00" />

    <Button
        android:id="@+id/sday"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="245dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00" />

</RelativeLayout>