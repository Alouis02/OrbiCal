        android:id="@+id/wday"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="415dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00"
        />

    <!--This button lets user go to the pop up window for
    their events or appointments that takes place on Thursdays.-->
    <Button
        android:id="@+id/thday"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="468dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00"
        />

    <!--This button lets user go to the pop up window for
    their events or appointments that takes place on Fridays.-->
    <Button
        android:id="@+id/fday"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="415dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00"
        />

    <!--This button lets user go to the pop up window for
    their events or appointments that takes place on Saturdays.-->
    <Button
        android:id="@+id/stday"
        android:layout_width="25dp"
        android:layout_height="52dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="320dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00"
        />

    <!--This button lets user go to the pop up window for
    their events or appointments that takes place on Sundays.-->
    <Button
        android:id="@+id/sday"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="245dp"
        android:alpha="0.12"
        android:text="Button"
        android:textColor="#00FFFF00"
        />

</RelativeLayout>